<h1>Statistiques par Parcelle</h1>
<canvas id="myChart" width="800" height="400"></canvas>
<script>
    const ctx = document.getElementById('myChart').getContext('2d');
    const labels = ['Température', 'Humidité', 'N', 'P', 'K', 'Niveau'];
    const datasets = [];
    <% data.forEach((item, index) => { %>
    datasets.push({
        label: '<%= item.parcels.join(', ') %> (MAC: <%= item.mac %>)',
        data: [<%= item.temperature %>, <%= item.humidity %>, <%= item.N %>, <%= item.P %>, <%= item.K %>, <%= item.level %>],
        backgroundColor: `rgba(${Math.floor(255 - 15 * <%= index %>)}, ${Math.floor(125 + 10 * <%= index %>)}, 50, 0.6)`
    });
    <% }) %>
    new Chart(ctx, {
        type: 'bar',
        data: { labels, datasets },
        options: {
            scales: { y: { beginAtZero: true } },
            responsive: true,
            plugins: { legend: { position: 'top' } }
        }
    });
</script>
